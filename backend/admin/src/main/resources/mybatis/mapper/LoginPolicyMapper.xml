<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.inspecthub.admin.loginpolicy.repository.LoginPolicyRepository">

    <!-- ResultMap for LoginPolicy -->
    <resultMap id="LoginPolicyResultMap" type="com.inspecthub.admin.loginpolicy.domain.LoginPolicy">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="enabledMethods" column="enabled_methods"
                typeHandler="com.inspecthub.admin.loginpolicy.repository.typehandler.LoginMethodSetTypeHandler"/>
        <result property="priority" column="priority"
                typeHandler="com.inspecthub.admin.loginpolicy.repository.typehandler.LoginMethodListTypeHandler"/>
        <result property="active" column="active"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 시스템 전역 로그인 정책 조회 -->
    <select id="findGlobalPolicy" resultMap="LoginPolicyResultMap">
        SELECT
            id,
            name,
            enabled_methods,
            priority,
            active,
            created_by,
            created_at,
            updated_by,
            updated_at
        FROM login_policy
        WHERE name = '시스템 로그인 정책'
          AND active = true
        LIMIT 1
    </select>

    <!-- ID로 로그인 정책 조회 -->
    <select id="findById" resultMap="LoginPolicyResultMap">
        SELECT
            id,
            name,
            enabled_methods,
            priority,
            active,
            created_by,
            created_at,
            updated_by,
            updated_at
        FROM login_policy
        WHERE id = #{id}
    </select>

    <!-- 로그인 정책 저장 (UPSERT) -->
    <!-- H2 MERGE 문법 사용 (PostgreSQL 호환 모드) -->
    <insert id="save">
        MERGE INTO login_policy (
            id,
            name,
            enabled_methods,
            priority,
            active,
            created_by,
            created_at,
            updated_by,
            updated_at
        )
        KEY (id)
        VALUES (
            #{policy.id},
            #{policy.name},
            #{policy.enabledMethods,typeHandler=com.inspecthub.admin.loginpolicy.repository.typehandler.LoginMethodSetTypeHandler},
            #{policy.priority,typeHandler=com.inspecthub.admin.loginpolicy.repository.typehandler.LoginMethodListTypeHandler},
            #{policy.active},
            #{policy.createdBy},
            #{policy.createdAt},
            #{policy.updatedBy},
            #{policy.updatedAt}
        )
    </insert>

</mapper>
