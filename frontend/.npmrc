# Enable legacy peer dependencies resolution for compatibility
legacy-peer-deps=false

# Strict peer dependencies
strict-peer-dependencies=false

# Save exact versions (no ^ or ~)
save-exact=false

# Auto install peer dependencies
auto-install-peers=true

# Enable audit for security checks
audit=true

# Fund messages
fund=false

# Progress indicator
progress=true

# Log level
loglevel=error

# Engine strict mode
engine-strict=true

# Optional dependencies installation
optional=true

# Cache configuration
cache=~/.npm

# Prefer offline mode when possible
prefer-offline=true

# Update notifier
update-notifier=true
