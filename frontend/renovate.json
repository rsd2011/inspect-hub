{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Seoul",
  "schedule": [
    "every weekend"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore(deps):",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchPackagePatterns": ["^@nuxt/", "^nuxt"],
      "groupName": "Nuxt core packages",
      "schedule": ["every weekend"]
    },
    {
      "matchPackagePatterns": ["^@primevue/", "^primevue"],
      "groupName": "PrimeVue packages"
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "TypeScript type definitions"
    },
    {
      "matchPackagePatterns": ["^eslint", "^@nuxt/eslint"],
      "groupName": "ESLint packages"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["@team"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  }
}
