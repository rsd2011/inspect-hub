{
  "extends": "./.nuxt/tsconfig.app.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    ".nuxt/imports.d.ts",
    "**/*"
  ],
  "exclude": [
    "node_modules",
    ".nuxt/dev",
    ".nuxt/dist",
    ".nuxt/schema",
    "dist",
    "coverage",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests/**"
  ]
}
