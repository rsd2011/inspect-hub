{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "coverage",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests/**"
  ]
}
